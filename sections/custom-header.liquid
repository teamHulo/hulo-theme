{%  style  %}  
   
    #shopify-section-{{section.id}} .header {
        display:block;
        width:100%;
    }
    #shopify-section-{{section.id}} .header__wrap{
        display:grid;
        align-items: center;
    }
    #shopify-section-{{section.id}} .header a{
        text-decoration:none;
    }
    #shopify-section-{{section.id}} .header li{
       list-style:none;
    }
    #shopify-section-{{section.id}} .nav-list {
        display: flex;
        gap:20px;
    }
    #shopify-section-{{section.id}} .logo{
        grid-area: logo;
    }
    #shopify-section-{{section.id}} .navigation{
        grid-area: nav;
    }
    #shopify-section-{{section.id}} .secondary-navigations {
        grid-area: secondary-nav;
        display:flex;
        justify-content:flex-end;
    }
    #shopify-section-{{section.id}} .burger{
        grid-area: burger;
    }
{% endstyle %}
{{ 'custom-header.css' | asset_url | stylesheet_tag }}

<div class="header {% if section.settings.sticky %} header-sticky {% endif %}">
    <div class="container">
        <div class="header__wrap {{section.settings.aligmant_navigation}}">
            {% if section.settings.aligmant_navigation == "menu_drawer" %}
                <div class="burger header__icon">
                    <span>
                        {% render 'icon-hamburger' %}
                    </span>
                </div>
            {% endif %}
            <div class="logo">
                <a href="{{ routes.root_url }}">
                    {% if section.settings.logo != blank %}
                        {%  capture logo_alt %}  
                            {% if  section.settings.logo.alt != blank %}
                                {{section.settings.logo.alt}}
                            {% else %}
                                {{ shop.name }}
                            {% endif %}
                        {% endcapture %} 

                        <div class="logo-image">
                            <div class="logo-image__wrap">
                                <img src="{{section.settings.logo}}" alt="{{logo_alt}}">
                            </div>
                        </div>
                    {% else %}
                        <span class="h2">{{ shop.name }}</span>
                    {% endif %}
                </a>
            </div>
            {% if section.settings.aligmant_navigation != "menu_drawer" %}
                <div class="navigation ">
                        {% render 'custom-navigation', navigation: section.settings.menu, blocks: section.blocks %}
                </div>
            {% endif %}
            <div class="secondary-navigations">
                <div class="header-account">
                    {%- if shop.customer_accounts_enabled -%}
                        <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="header__icon header__icon--account link focus-inset{% if section.settings.menu != blank %} small-hide{% endif %}">
                            {% render 'icon-account' %}
                            <span class="visually-hidden">
                                {%- liquid
                                    if customer
                                        echo 'customer.account_fallback' | t
                                    else
                                        echo 'customer.log_in' | t
                                    endif
                                -%}
                            </span>
                        </a>
                    {%- endif -%}
                </div>
                <div class="header-search">
                </div>
                <div class="header-cart">
                    <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
                        {%- liquid
                            if cart == empty
                                render 'icon-cart-empty'
                            else
                                render 'icon-cart'
                            endif
                        -%}
                        <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
                        {%- if cart != empty -%}
                            <div class="cart-count-bubble">
                                {%- if cart.item_count < 100 -%}
                                <span aria-hidden="true">{{ cart.item_count }}</span>
                                {%- endif -%}
                                <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
                            </div>
                        {%- endif -%}
                    </a>
                </div>
                
            </div>
        </div>
    </div>
</div>


{% schema %}
    {
      "name": "t:sections.header.name",
      "class": "custom-header",
      "settings": [
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:sections.all.colors.label",
            "default": "background-1"
        },
        {
            "type": "select",
            "id":"aligmant_navigation",
            "label": "Vertical alignment",
            "options": [
                {
                    "value": "logo_left",
                    "label": "Logo left, navigation inline"
                },
                {
                    "value": "navigation_center",
                    "label": "Logo left, navigation center"
                },
                {
                    "value": "logo_center",
                    "label": "Logo center, navigation inline"
                },
                {
                    "value": "navigation_below",
                    "label": "Logo center, navigation belowe"
                },
                {
                    "value": "menu_drawer",
                    "label": "drawer"
                }
            ],
            "default": "logo_left"
        },
        {
            "type":"checkbox",
            "id":"sticky",
            "label":"Enable sticky header",
            "default": true
        },
        {
            "type": "header",
            "content":"Logo"
        },
        {
            "type":"image_picker",
            "id":"logo",
            "label":"image",
            "info": "280 x 80px .png recommended"
        },
        {
            "type":"range",
            "id": "logo_width",
            "min": 20,
            "max": 300,
            "step": 5,
            "unit": "px",
            "label": "Image width",
            "default": 300
        },
        {
            "type":"range",
            "id": "mobile_logo_width",
            "min": 20,
            "max": 200,
            "step": 5,
            "unit": "px",
            "label": "Mobile image width",
            "default": 200
        },
        {
            "type": "header",
            "content":"Navigation"
        }, 
        {
            "type": "link_list",
            "id": "menu",
            "label": "t:sections.header.settings.menu.label"
         },
         {
            "type": "link_list",
            "id": "mobile_menu",
            "label": "t:sections.header.settings.menu.label"
         }
        

      ],
      "blocks": [
            {
                "type":"mega-menu",
                "name":"Mega menu",
                "settings": [
                    {
                        "type": "text",
                        "id":"menu_item",
                        "label":"Menu item"
                    },
                    {
                        "type":"header",
                        "content": "Image 1" 
                    },
                    {
                        "type":"image_picker",
                        "id":"image1",
                        "label":"image"
                    },
                    {
                        "type":"text",
                        "id":"image1_heading",
                        "label":"heading"
                    },
                    {
                        "type":"richtext",
                        "id":"image1_text",
                        "label":"text"
                    },
                    {
                        "type":"url",
                        "id":"url_1",
                        "label":"Link"
                    },
                    {
                        "type":"header",
                        "content": "Image 2" 
                    },
                    {
                        "type":"image_picker",
                        "id":"image2",
                        "label":"image"
                    },
                    {
                        "type":"text",
                        "id":"image2_heading",
                        "label":"heading"
                    },
                    {
                        "type":"richtext",
                        "id":"image2_text",
                        "label":"text"
                    },
                    {
                        "type":"url",
                        "id":"url_2",
                        "label":"Link"
                    }
                ]
            }
        ]
      
    }
    {% endschema %}